<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="3"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="4"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="5"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="6"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="7"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="517dp" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="9"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="517dp" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="8"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/nro_cpu"
        android:layout_width="85dp"
        android:layout_height="14dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="583dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listaIntentos"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ScrollView
        android:id="@+id/listaIntentos"
        android:layout_width="215dp"
        android:layout_height="274dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="470dp"
        android:scrollbarStyle="insideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="10dp"
        android:text="NUMERO CPU:"
        app:layout_constraintBottom_toTopOf="@+id/nro_cpu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listaIntentos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAbandonar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="23dp"
        android:text="Abandonar"
        app:layout_constraintStart_toEndOf="@+id/btnVolverAIntentar"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <Button
        android:id="@+id/btnVolverAIntentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:text="Volver a intentar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAbandonar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="0"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="590dp" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="1"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUsuario"
        android:text="2"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="367dp" />
</androidx.constraintlayout.widget.ConstraintLayout>